<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendIntent"
        android:id="@+id/sendIntentButton"
        android:layout_centerVertical="true"
        android:onClick="onClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtArtist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:hint="Artist"
        android:layout_alignRight="@+id/sendAlternateIntentButton"
        android:layout_alignEnd="@+id/sendAlternateIntentButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTrack"
        android:layout_below="@+id/txtArtist"
        android:layout_marginTop="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Track Title"
        android:layout_alignRight="@+id/sendAlternateIntentButton"
        android:layout_alignEnd="@+id/sendAlternateIntentButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAlbum"
        android:layout_below="@+id/txtTrack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_alignRight="@+id/txtTrack"
        android:layout_alignEnd="@+id/txtTrack"
        android:hint="Album" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND ALTERNATE INTENT!"
        android:id="@+id/sendAlternateIntentButton"
        android:onClick="onClick"
        android:layout_alignTop="@+id/sendIntentButton"
        android:layout_toRightOf="@+id/sendIntentButton"
        android:layout_toEndOf="@+id/sendIntentButton" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default to alternate method "
        android:id="@+id/defaultToAltCheckBox"
        android:layout_above="@+id/sendIntentButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxArtistLine"
        android:layout_alignTop="@+id/txtArtist"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="max" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTrackLine"
        android:layout_alignTop="@+id/txtTrack"
        android:layout_alignRight="@+id/maxArtistLine"
        android:layout_alignEnd="@+id/maxArtistLine"
        android:hint="max" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug!"
        android:id="@+id/debugButton"
        android:layout_below="@+id/sendIntentButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

</RelativeLayout>
